<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#ffffff"
    tools:context=".View.EndCreditsActivity">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#041da6">
        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f635e405">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffea00"
                android:padding="20dp">

                <LinearLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ff9100">
                    <LinearLayout
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ff0900">
                            <LinearLayout
                                android:padding="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#000000"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/end_credits"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="7"
                                    android:textSize="20sp"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="375dp"
                                    android:layout_marginTop="84dp"
                                    android:gravity="center"/>

                                <Button
                                    android:id="@+id/play_again"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:text="NEW GAME"
                                    android:gravity="center"
                                    android:layout_marginLeft="475dp"
                                    android:layout_marginTop="40dp"
                                    android:background="@drawable/button_border"
                                    android:maxLines="2" />
                            </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
